<%- include('../partials/header') %>

<div class="page-title-section">
    <h1 class="page-title">앨범 수정</h1>
</div>

<div class="content-wrapper container">
    <div class="form-container">
        <form action="/album/edit/<%= photo.id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="caption">설명</label>
                <input type="text" id="caption" name="caption" value="<%= photo.caption %>">
            </div>
            <div class="form-group" style="text-align: center;">
                 <% if (photo.fileType === 'image') { %>
                    <img src="/uploads/album/<%= photo.filePath %>" alt="<%= photo.caption %>" style="max-width: 300px; border-radius: 8px;">
                <% } else { %>
                    <video src="/uploads/album/<%= photo.filePath %>" controls style="max-width: 300px; border-radius: 8px;"></video>
                <% } %>
            </div>
            <div class="form-group">
                <label for="mediaFile">사진/동영상 교체</label>
                <input type="file" id="mediaFile" name="mediaFile" accept="image/*,video/*">
            </div>
            <div class="btn-group">
                 <a href="/album/<%= photo.id %>" class="btn" style="background-color: #555; color: #fff;">취소</a>
                <button type="submit" class="btn">수정 완료</button>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>